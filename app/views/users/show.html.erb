
    <div class="content" >
        <%= render 'follow_form' if signed_in? %>
        <% unless @user.measurements.empty? %>
            <div style="display: table;" class="measurements">
                <%= render :partial => 'shared/feed_item', :collection => @measurements %>
            </div>
            <%= will_paginate @measurements %>
        <% end %>
    </div>
    <div class="sidebar round">
        <%= render 'shared/user_info' %>
        <%= render 'shared/stats' %>
    </div>
